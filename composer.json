{
    "name": "salvadorbba/tribcalc",
    "description": "Calculadora de tributos para aplicações PHP",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "TribCalc\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Rubens dos Santos",
            "email": "salvadorbba@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "keywords": [
        "tributos",
        "calculadora",
        "impostos",
        "fiscal",
        "brasil"
    ],
    "support": {
        "issues": "https://github.com/salvadorbba/tribcalc/issues",
        "source": "https://github.com/salvadorbba/tribcalc"
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}