{
    "name": "salvadorbba/tribcalc",
    "description": "Biblioteca PHP para cálculos tributários brasileiros",
    "version": "1.0.1",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "TribCalc\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Rubens dos Santos",
            "email": "salvadorbba@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "minimum-stability": "stable",
    "keywords": [
        "tributos",
        "calculadora",
        "impostos",
        "fiscal",
        "brasil",
        "icms",
        "ipi",
        "difal",
        "fcp"
    ],
    "support": {
        "issues": "https://github.com/SALVADORBBA/tribcalc/issues",
        "source": "https://github.com/SALVADORBBA/tribcalc"
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}